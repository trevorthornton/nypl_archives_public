<a name="respository"></a>
<div id="uuid-attachments" class="uuid-attachments subsection">
  
  <h3>Repository Assets</h3>
  <br>

  <div class="row">

    <div class="span4">

      <div class="add-digital-asset">
        <form class="form-inline" method="get" action="/components/<%=@component.id%>/add_uuid">
          <input type="text" name="uuid" id="uuid" class="small" placeholder="Enter UUID">
          <button class="btn btn-small" type="submit">Attach UUID</button>
        </form>

        <div class="well">

          <% if @repo_objects.blank? %>

            <span><em>No UUIDs attached.</em></span>

          <% else %>

            <% @repo_objects.each do |r| %>

              <%
                if r.total_captures.blank?

                  r.total_captures = "0"
                  total = "(0)"


                else

                  p r.total_captures
                  p r.total_captures
                  p r.total_captures

                  ids = []

                  JSON.parse(r.capture_ids).each  do |c|
                    ids << c['image_id']
                  end

                  total = '<a href="#" class="uuid-link" data-ids="' + ids.join('|')  + '">(' + r.total_captures.to_s + ')</a>'


                  


                end
              %>

              <span><%=r.uuid%></span>&nbsp;&nbsp;<span title="Total Captures" class="tool-tip"><%= raw total%></span>


            <% end %>

          <% end %>

        </div>

        <div class="row">

          <div class="span2">
            <form class="form-inline" method="get" action="/components/<%=@component.id%>/add_uuid">
              <input type="hidden" name="uuid" id="uuid" value="-1" >
              <button class="btn btn-small" type="submit">Remove All UUIDs</button>
            </form>
          </div>
          <div class="span2">
            <form class="form-inline" method="get" action="/components/<%=@component.id%>/add_uuid">
              <input type="hidden" name="uuid" id="uuid" value="0" >
              <button class="btn btn-small" type="submit">Refresh Captures</button>
            </form>
          </div>

      </div>
    </div>  

  </div>


  <div class="span8" id="uuid-attachments-display">
  
    <ul class="thumbnails">


    </ul>

  </div>  


</div>